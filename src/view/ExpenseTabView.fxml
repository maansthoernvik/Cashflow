<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import model.input.ModdedDatePicker?>
<?import model.input.ModdedTextField?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.ExpenseTabViewController">
    <TableView fx:id="tvExpenses" editable="true" prefWidth="1000">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        <columns>
            <TableColumn text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="Name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Amount">
                <cellValueFactory>
                    <PropertyValueFactory property="Amount" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <HBox>
        <Label text="Name:"/>
        <Label text="Amount:"/>
    </HBox>
    <HBox>
        <ModdedTextField fx:id="tfName"/>
        <ModdedTextField fx:id="tfAmount"/>
    </HBox>
    <Label text="Ends:"/>
    <HBox>
        <ModdedDatePicker fx:id="dpEndDate"/>
        <CheckBox fx:id="chebEndDate" text="Ends"/>
    </HBox>
    <HBox>
        <Button fx:id="btnSave" text="Save" onMouseReleased="#handleSave"/>
        <Button fx:id="btnUpdate" text="Update" onMouseReleased="#handleUpdate"/>
        <Button fx:id="btnDelete" text="Delete" onMouseReleased="#handleDelete"/>
        <Button fx:id="btnClear" text="Clear" onMouseReleased="#handleClear"/>
    </HBox>
</VBox>
