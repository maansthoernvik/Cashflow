<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import model.input.ModdedTextField?>
<?import model.input.ModdedDatePicker?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns:fx="http://www.w3.org/2001/XInclude" xmlns="http://javafx.com/javafx/8.0.40"
      fx:controller="controller.LoanTabViewController">
    <TableView fx:id="tvLoans" editable="true" prefWidth="1000">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
        <columns>
            <TableColumn text="Name">
                <cellValueFactory>
                    <PropertyValueFactory property="Name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Amount">
                <cellValueFactory>
                    <PropertyValueFactory property="Amount" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Interest rate">
                <cellValueFactory>
                    <PropertyValueFactory property="InterestRate" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Amortization amount">
                <cellValueFactory>
                    <PropertyValueFactory property="AmortizationAmount" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <HBox>
        <Label text="Name:"/>
        <Label text="Amount:"/>
    </HBox>
    <HBox>
        <ModdedTextField fx:id="tfName"/>
        <ModdedTextField fx:id="tfAmount"/>
    </HBox>
    <HBox>
        <Label text="Interest rate:"/>
        <Label text="Amortization amount:"/>
    </HBox>
    <HBox>
        <ModdedTextField fx:id="tfInterestRate"/>
        <ModdedTextField fx:id="tfAmortizationAmount"/>
    </HBox>
    <HBox>
        <Label text="Next Payment:"/>
        <Label text="Bound to:"/>
    </HBox>
    <HBox>
        <ModdedDatePicker fx:id="dpNextPayment"/>
        <CheckBox fx:id="chebNextPayment"/>
        <ModdedDatePicker fx:id="dpBoundTo"/>
        <CheckBox fx:id="chebBoundTo"/>
    </HBox>
    <HBox>
        <Button fx:id="btnSave" text="Save" onMouseReleased="#handleSave"/>
        <Button fx:id="btnUpdate" text="Update" onMouseReleased="#handleUpdate"/>
        <Button fx:id="btnDelete" text="Delete" onMouseReleased="#handleDelete"/>
        <Button fx:id="btnClear" text="Clear" onMouseReleased="#handleClear"/>
    </HBox>
</VBox>
