<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.text.Font?>

<!--This FXML creates the login view of the application, containing fields for the user to provide account information.
    Depth of node hierarchy is denoted with levels, 0 being top.-->

<!--Start of Level 0-->
<GridPane alignment="CENTER" hgap="3.0" vgap="10.0" maxWidth="400.0" minWidth="400.0" maxHeight="250.0"
          minHeight="250.0" nodeOrientation="LEFT_TO_RIGHT" xmlns="http://javafx.com/javafx/8.0.40"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>

    <!--Grid row 0-->
    <Label text="CB" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"
           nodeOrientation="LEFT_TO_RIGHT" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        <font>
            <Font size="36.0" />
        </font>
    </Label>
    <!--Grid row 1-->
    <Label text="Username - " GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="RIGHT" />
    <TextField fx:id="tfLogin" promptText="Username" GridPane.columnIndex="1" GridPane.rowIndex="1"
               GridPane.halignment="LEFT" />
    <!--Grid row 2-->
    <Label text="Password - " GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="RIGHT" />
    <PasswordField fx:id="pwfLogin" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   GridPane.halignment="LEFT" />
    <!--Grid row 3-->
    <Button fx:id="btnLogin" text="Enter" onMouseReleased="#handleLogin" mnemonicParsing="false"
            GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" GridPane.halignment="CENTER"
            GridPane.valignment="CENTER" />
</GridPane>
<!--End of Level 0-->

